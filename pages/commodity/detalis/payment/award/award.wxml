<view class="award_top">
  <component title='确认支付' show_bol='{{falsr}}'></component>
</view>
<view class="xiahuanxian">
  <image src="https://giftbox.zhifengwangluo.com/public/images/detalis/xiahuaxian_icon.png"></image>
</view>
<view class="award_topbox" bindtap="site">
  <image src="https://giftbox.zhifengwangluo.com/public/images/detalis/dingwei_icon.png" class="award_dingwei"></image>
  <text class="award_text" wx:if="{{dizhi.length}}">{{dizhi}}</text>
  <text class="award_text" wx:else>{{order_detail.address}}</text>
  <image src="https://giftbox.zhifengwangluo.com/public/images/detalis/you_icon.png" class="award_you"></image>
</view>


<view class="detailshop" wx:for="{{goods}}">
<view class="award_ct">
  <view class="award_ct_l">
  <image src="{{item.img}}" class="shop_img"></image>
  </view>
  <view class="award_ct_r">
    <view class="award_ct_rt">{{item.goods_name}}</view>
    <view class="award_ct_rc">
      <text style="float:left;">{{item.spec_key_name}}</text>
      <text style="float:right;">X{{item.goods_num}}</text>
    </view>
  </view>
</view>
<view class="awrad_cb">
  <!-- <view class="awrad_box" bindtap="tiaofapiao">
    <text>开具发票</text>
    <image src="https://giftbox.zhifengwangluo.com/public/images/detalis/you_icon.png" class="awrad_cb_you"></image>
  </view> -->
  <view class="awrad_box">
    <text>商品金額</text>
    <text class="awrad_box_text">HK${{item.goods_price}}</text>
  </view>
  <view class="awrad_box">
    <text>優惠立減</text>
    <text class="awrad_box_text">-HK${{item.discount}}</text>
  </view>
  <!-- <view class="awrad_box">
    <text>郵費</text>
    <text class="awrad_box_text">HK$40.00</text>
  </view> -->
  <view class="awrad_box">
    <text>稅金</text>
    <text class="awrad_box_text">{{item.taxes}}%</text>
  </view>
  
</view>
</view>



   

 

<view class="awrad_textarea">
    <text>訂單備註</text>
    <input placeholder="選填，請先和商家協商一致" disabled="{{!flag}}" />
</view>
<view>
<text bindtap="tiaofapiao" class="fapiaotext">开具发票</text>
</view>
<view class="awrad_f">
  <text class="awrad_fl">共1件</text>
  <text class="awrad_fr">合計：HK$172.00  (含邮费:HK$40.00) </text>
</view>
<view class="award_button" bindtap="show">
  提交订单
</view>
<view class="award_pop-upbox" hidden="{{flag}}" catchtouchmove="preventTouchMove">
  <view class="award_pop-up"></view>
  <view class="pop-up_box">
    <view class="pop-up_box_t">选择支付方式</view>
    <view class="pop-up_box_c" bindtap="integral">积分支付</view>
    <view class="pop-up_box_b" bindtap="wxpay">微信支付</view>
  </view>
</view>
<view class="close" bindtap="hide" hidden="{{flag}}">X</view>
