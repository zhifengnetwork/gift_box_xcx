/* pages/commodity/detalis/give/scene/scene.wxss */
page{
  padding-top: 140rpx
}
.tabBar{
  display:flex;
  align-items: flex-end;
  overflow-x: scroll;
  overflow-y: hidden;
  font-size: 0;
  margin: 60rpx 0 120rpx 80rpx;
}
.tabBar::after{
  display: block;
  content: '';
  clear: both;
}
.tabBar .active{
  color: #fff;
  background: #f79c97;
}
.tabBar_item{
  flex-shrink:0;
  display: inline-block;
  position: relative;
  margin-left: 10rpx;
  width: 210rpx;
  height: 120rpx;
  line-height: 160rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.tabBar_icon{
  position: absolute;
  top: 20rpx;
  left: 28rpx;
  width: 32rpx;
  height: 32rpx;
}
.tabCont{
  display:flex;
  align-items: flex-end;
  width: 100%;
  height: 730rpx;
  overflow-x: scroll;
  overflow-y: hidden;
  font-size: 0;
}
.tabCont_item{
  display: inline-block;
  flex-shrink:0;
  margin: 0 50rpx 0;
  width: 400rpx;
  height: 80%;
  border-radius: 20rpx;
  overflow: hidden;
  transition: .3s all;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.5);
}
.tabCont_img{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
  width: 400rpx;
  height: 80%;
  transition: .3s all;
  border-radius: 20rpx;
}
.tabCont_active{
  width: 450rpx;
  height: 90%;
}
.btn{
  margin: 50rpx auto;
  width: 270rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  color: #fff;
  border-radius: 20rpx;
  background: #f79c97;
}