/* pages/commodity/detalis/give/scene/scene.wxss */
page{
  padding-top: 140rpx
}
.tabBar{
  display:flex;
  align-items: flex-end;
  overflow-x: scroll;
  overflow-y: hidden;
  font-size: 0;
  margin: 40rpx 0 126rpx 44rpx;
}
.tabBar::after{
  display: block;
  content: '';
  clear: both;
}
.tabBar .active{
  color: #fff;
  background: #f79c97;
}
.tabBar_item{
  flex-shrink:0;
  display: inline-block;
  position: relative;
  margin-right: 42rpx;
  width: 214rpx;
  height: 113rpx;
  line-height: 160rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.tabBar_icon{
  position: absolute;
  top: 20rpx;
  left: 28rpx;
  width: 32rpx;
  height: 32rpx;
}
.tabCont{
  display:flex;
  align-items: flex-end;
  width: 100%;
  height: 730rpx;
  overflow-x: scroll;
  overflow-y: hidden;
  font-size: 0;
}
.tabCont_item{
  display: inline-block;
  flex-shrink:0;
  margin: 0 50rpx 0;
  width: 400rpx;
  height: 80%;
  border-radius: 20rpx;
  overflow: hidden;
  transition: .3s all;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.5);
}
.tabCont_img{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10px;
  margin: 0 auto;
  width: 420rpx;
  height: 560rpx;
  box-shadow: 0 5rpx 14rpx 5rpx #adadad;
  transition: .3s all;
  border-radius: 20rpx;
}
.tabCont_active{
  height: 700rpx;
}
.btn{
  margin: 50rpx 130rpx;
  width: 270rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  color: #fff;
  border-radius: 100rpx;
  background: #f79c97;
}