<!--pages/commodity/detalis/give/integral/integral.wxml-->
<component title='积分支付' show_bol='{{false}}' side="{{true}}"></component>
<view class="integral">
  <view class="integral_item">
    <view class="integral_title">
      VIP卡号:
    </view>
    <view class="integral_inp">
      <input type="text" class="integral_input" bindinput="card_num"></input>
    </view>
  </view>
  <view class="integral_item">
    <view class="integral_title">
      会员姓名:
    </view>
    <view class="integral_inp">
      <input type="text" class="integral_input" bindinput="card_name"></input>
    </view>
  </view>
  <view class="integral_item">
    <view class="integral_title">
      手机号码:
    </view>
    <view class="integral_inp">
      <input type="text" class="integral_input" bindinput="card_mobile"></input>
    </view>
  </view>
  <view class="send" bindtap="order_jifen_pay">提交</view>
</view>