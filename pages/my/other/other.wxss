page{
  background:rgba(241,239,239,1);
  width: 100%;
  height: 100%;
}
.my_t {
  height: 400rpx;
  background: rgba(17, 17, 17, 1);
}

.my_tt {
  height: 260rpx;
}

.my_ttl {
  float: left;
  height: 110rpx;
  margin-left: 40rpx;
  margin-top: 140rpx;
}

.my_ttl view {
  font-size: 47rpx;
  font-family: SourceHanSansCN-Bold;
  font-weight: bold;
  color: rgba(238, 238, 238, 1);
}

.my_ttl text {
  font-size: 21rpx;
  font-family: SourceHanSansCN-Light;
  font-weight: 300;
  color: rgba(238, 238, 238, 1);
}

.my_ttr {
  float: right;
  margin-top: 140rpx;
  margin-right: 100rpx;
  width: 110rpx;
  height: 110rpx;
  background: rgba(191, 191, 191, 1);
  border-radius: 50%;
  overflow: hidden;
}
.my_ttr image{
  width: 100%;
  height: 100%;
}
.my_tf{
  height: 140rpx;
  display: flex;
  flex-direction:row;                
  justify-content:space-between ;
}
.my_tf_box{
  flex: 2;
  text-align: center;
}
.my_tf_box2{
  flex: 3;
  text-align: center;
}
.front{
  padding-top: 40rpx;
}
.front view{
  font-size:21rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(238,238,238,1);
}
.front text{
  font-size:35rpx;
  font-family:Roboto-Bold;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.back1{
  width:140rpx;
  height:40rpx;
  margin-top: 50rpx;
  border-radius:20px;
  font-size:22rpx;
  line-height: 40rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 20rpx;
  background: rgba(255,38,64,1);
}
button::after {
  border: none;
  }
button{
  background-color: transparent!important
}
.back{
  width:140rpx;
  height:40rpx;
  margin-top: 50rpx;
  border:1px solid rgba(240,238,238,1);
  border-radius:20px;
  font-size:22rpx;
  line-height: 40rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 20rpx;
}
