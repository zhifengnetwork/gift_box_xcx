<view style="height:{{bar_Height+46}}px;">
  <component title='我的關注' show_bol='{{false}}' site="{{false}}"></component>
</view>
<scroll-view class='dataContainer' scroll-y bindscrolltolower="nextDataPage" style="height:100%;">
  <view class="border_top"></view>
  <view class="follow_box" bindtap="followlist" wx:for="{{item}}" data-id="{{index}}">
    <view class="follow_l">
      <view class="follow_imgbox">
        <image src="{{item.avatar}}" class="follow_img"></image>
      </view>
    </view>
    <view class="follow_c">
      <view class="follow_ct">{{item.nickname}}</view>
      <view class="follow_cf">
        <text>筆記·{{item.article_num}}</text>
        <text class="follow_cf_text">|</text>
        <text>粉絲·{{item.fans_num}}</text>
      </view>
    </view>
    <view class="follow_r">
      <view class="yiguanzhu" wx:if="{{item.follow_count}}">已關注</view>
    </view>
  </view>
</scroll-view>