page{
  width: 100%;
  height: 100%;
  background: #fff;
}
.swiper-tab{
  border-top: 2rpx solid #EAEAEA;
   width: 100%;
  /* border-bottom: 2rpx solid #ccc; */
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  color: #999999;
  font-size: 28rpx;
}
.swiper-tab-item{
  flex: 1;
}
.active text{
  /* margin-bottom: 4rpx; */
  border-bottom: 4rpx solid #000;
  font-size: 30rpx;
  color: #000;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.articlebox{
  width: 100%;
  height: 100%;
}
.article_box{
  float: left;
  width: 48%;
  margin-left: 1%;
  margin-right: 1%;
  margin-top: 20rpx;
  overflow: hidden;
}
.article_imgbox{
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}
.article_imgbox image{
  width: 100%;
  height: 100%
}
.article_con{
  height: 90rpx;
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.article_f{
  height: 60rpx;
}
.article_touxiang{
  float: left;
  width: 40rpx;
  height: 40rpx;
  background:rgba(208,208,208,1);
  border-radius:50%;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
  overflow: hidden;
}
.article_touxiang image{
  width: 100%;
  height: 100%;
  /* display: block; */
}
.article_name{
  float: left;
  font-size:22rpx;
  font-family:Roboto-Light;
  font-weight:bold;
  color:rgba(119,119,119,1);
  line-height:60rpx;
}
.article_zan{
  float: right;
  margin-right: 10rpx;
}
.zan_imgbox{
  margin-top: 15rpx;
  float: left;
  width: 30rpx;
  height: 30rpx;
  overflow: hidden;
}
.zan_imgbox image{
  width: 100%;
  height: 100%;
  display: block;
}
.zan_text{
  font-size:22rpx;
  float: left;
  font-family:Roboto-Light;
  font-weight:bold;
  color:rgba(119,119,119,1);
  line-height:60rpx;
  margin-left: 10rpx;
}