}
.recharge_nav{
  height: 115rpx;
}
.recharge_box{
  margin: 120rpx 60rpx;
  height: 150rpx;
  background: #ffffff;
  padding: 50rpx;
}
.recharge_top{
  font-size: 28rpx;
  line-height: 60rpx;
  color: #333333;
}
.recharge_conent{
  height: 100rpx;
