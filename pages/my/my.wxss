.my_top{
  height: 115rpx;
}
.my_t{
  margin: 50rpx;
  height: 320rpx;
  background: linear-gradient(0deg,rgba(177,166,162,1) 0%,rgba(137,115,106,1) 100%);
  border-radius:12px;
}
.my_tt{
  height: 84rpx;
  padding: 30rpx;
}
.my_HeadPortrait{
  float: left;
  margin-right: 20rpx;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: skyblue;
}
.my_ttr{
  float: left;
  height: 84rpx;
}
.my_name{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  font-weight:bold;
  color:rgba(247,242,240,1);
}
.my_userid{
  font-size:18rpx;
  font-family:MicrosoftYaHei;
  font-weight:bold;
  color:rgba(220,211,207,1);
}
.my_tc{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.my_tc>view{
  width: 120rpx;
  height: 150rpx;
  text-align: center;
}
.my_tc>view .my_tc_img{
  margin-left: 18rpx;
  width: 84rpx;
  height: 84rpx;
  background: #fff;
  border-radius: 50%;
}
.my_tc>view>text{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  font-weight:bold;
  color:rgba(242,238,236,1);
}
.my_c{
  padding: 0 50rpx;
}
.my_cbox{
  height: 250rpx;
  /* background: skyblue; */
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 20rpx;
}
.my_cbox_t{
  height: 100rpx;
  padding: 0 20rpx;
}
.my_cbox_tl{
  float: left;
  font-size:24rpx;
  line-height: 100rpx;
  font-family:MicrosoftYaHei;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
.my_cbox_tr{
  float: right;
  font-size:26rpx;
  line-height: 100rpx;
  font-family:FangSong;
  font-weight:bold;
  color:rgba(160,160,160,1);
}
.my_cbox_c{
  display: flex;
  align-items: center;
  justify-content: space-around;  
}
.my_cbox_cbox{
  width: 120rpx;
  height: 150rpx;
  text-align: center;
}
.my_cbox_cboximg{
  width: 60rpx;
  height: 60rpx;
  background: pink;
  margin-left: 30rpx;
  border-radius: 50%;
}
.my_cbox_cbox>text{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(51,51,51,1);
}