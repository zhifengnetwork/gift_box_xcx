/* tab切换 */

.swiper-tab {
  background: #fff;
  width: 100%;
  border-bottom: 2rpx solid rgba(243, 241, 241, 1);
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.swiper-tab-item {
  flex: 1;
  text-align: center;
  font-size: 25rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  position: relative;
}

.swiper-tab-item>.border-right {
  position: absolute;
  right: 0;
  top: 40rpx;
  transform: translateX(-50%);
  display: block;
  width: 3rpx;
  height: 25rpx;
  background: #aaa;
}

.active {
  color: #000;
  font-size: 26rpx;
  font-weight: bold;
}

.active>text {
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  display: block;
  width: 35rpx;
  height: 4rpx;
  background: rgba(0, 0, 0, 1);
}

.show {
  display: block;
}

.hidden {
  display: none;
}

