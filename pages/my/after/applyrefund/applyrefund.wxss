}
.detalis_num{
  line-height: 50rpx;
  font-size:24rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  /* color:rgba(153,153,153,1); */
}
/* 商品小计 */
.subtotal{
  border-bottom: 2rpx solid #f6f6f6;
  margin: 0 30rpx;
  padding: 0 30rpx;
  padding-top: 20rpx;
  background: #fff;
}
.subtotal_box{
  overflow: hidden;
  font-size: 24rpx;
  line-height: 50rpx;
  /* color: #f6f6f6; */
  color:rgba(153,153,153,1);
}
.subtotal_boxl{
  float: left;
}
.subtotal_boxr{
  float: right;
}
/* 实付金额 */
.pocket{
  margin: 0 30rpx;
  padding: 0 30rpx;
  background: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #f6f6f6;
  font-weight:bold;
  font-family:SourceHanSansCN-Regular;
}
.pocket_l{
  float: left;
}
.pocket_r{
  float: right;
}
/* 退款金额 */
.refundmoney{
  margin: 0 30rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
  background: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #f6f6f6;
  font-weight:500;
  font-family:SourceHanSansCN-Regular;
}
.refundmoney_l{
  float: left;
}
.refundmoney_r{
  float: right;
}
.refundcause{
  margin: 0 30rpx;
  padding: 0 30rpx;
  background: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #f6f6f6;
  font-weight:500;
  font-family:SourceHanSansCN-Regular;
}
.refundcause_l{
  float: left;
}
.refundcause_r{
  float: right;
  color:rgba(153,153,153,1);
}
.refundcause_r text{
  margin-left: 20rpx;
}
/* 提醒 */
.remind{
  margin: 0 30rpx;
  padding: 0 30rpx;
  background: #fff;
  font-size: 26rpx;
  line-height: 80rpx;
  color:rgba(153,153,153,1);
  overflow: hidden;
  font-weight:500;
  font-family:SourceHanSansCN-Regular;
}
/* 退款說明 */
.refundstate{
  font-size: 26rpx;
