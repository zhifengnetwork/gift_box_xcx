/* 商品信息 */
.detalis_con{
  height: 155rpx;
  margin: 0 30rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
  padding-top: 20rpx;
  background: #fff;
}
.detalis_img{
  float: left;
  width:130rpx;
  height:155rpx;
  background:rgba(227,226,226,1);
}
.detalis_conent{
  float: left;
  margin-left: 20rpx;
}
.detalis_brand{
  font-size:25rpx;
  line-height: 50rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:bold;
  color:rgba(34,34,34,1);
}
.detalis_standard{
  font-size:22rpx;
  line-height: 50rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(34,34,34,1);
}
.detalis_size{
  font-size:18rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
