/* pages/card/makecard.wxss */
.makecard{
  width: 100vw;
  height: 100vh;
  background: -moz-linear-gradient(45deg, #3F64FA, #B1B2FC);
  background: -webkit-gradient(linear,0 100%,100% 0%,from(#3F64FA),to(#B1B2FC));
  background: -webkit-linear-gradient(45deg, #3F64FA, #B1B2FC);
  background: -o-linear-gradient(45deg, #3F64FA, #B1B2FC);
}
/* 头部导航 */
.makecard_nav{
  position: relative;
  padding-top: 45rpx;
  color: #fff;
  line-height: 110rpx;
  font-size:32rpx;
  font-weight:500;
  text-align: center;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  font-family:SourceHanSansCN-Medium;
}
.makecard_nav_img{
  position: absolute;
  left: 30rpx;
  top: 45rpx;
  bottom: 0;
  margin: auto;
  width:18rpx;
  height:29rpx;
  font-size:38rpx;
  font-family:KaiTi;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
/* 选择列表 */
.select_list::after{
  display: block;
  content: '';
  clear: both;
}
.select_list{
  margin-top: 80rpx;
  padding: 0 64rpx;
}
.select_item{
  float: right;
  position: relative;
  margin-bottom: 60rpx;
  width: 576rpx;
  height: 170rpx;
  letter-spacing: 2rpx;
  color: #fff;
  padding: 40rpx 0 0 130rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  background: #303f7a;
  border-radius: 25rpx;
}
.select_imgwrap{
  position: absolute;
  left: -50rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 100rpx;
  height: 100rpx;
  background: #2AC1E7;
  border-radius: 20rpx;
}
.select_item:nth-child(2) .select_imgwrap{
  background: #8577f9;
}
.select_item:nth-child(3) .select_imgwrap{
  background: #f293a1;
}
.select_item:nth-child(4) .select_imgwrap{
  background: #eed9b5;
}
.select_img{
  width: 100%;
  height: 100%;
}
.select_text{
  line-height:50rpx;
  font-size:38rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  font-family:SourceHanSansCN-Medium;
}
.select_tips{
  line-height:50rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(166,182,255,1);
  font-family:SourceHanSansCN-Normal;
}
.select_icon{
  position: absolute;
  top: 46rpx;
  right: 76rpx;
  width:32rpx;
  height:32rpx;
}
.select_icon_img{
  width: 100%;
  height: 100%; 
}
/* 预览 */
.preview{
  margin-top: 40rpx;
  color: #323B7D;
  line-height: 60rpx;
  padding: 0 64rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.preview_btn{
  float: left;
  width: 220rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #fff;
  border-radius: 30rpx;
}
.preview_succeed{
  float: right;
  width:72rpx;
  height:52rpx;
}
.preview_succeed_img{
  width: 100%;
  height: 100%;
}
/* 写下祝福 */
.blessing_mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
}
.blessing_content{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width:595rpx;
  height:580rpx;
  padding: 0 90rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  background: skyblue;
}
.blessing_back{
  position: absolute;
  top: -80rpx;
  right: -20rpx;
  width:62rpx;
  height:62rpx;
  line-height: 62rpx;
  text-align: center;
  background:#8A8888;
  border-radius:50%;
}
.blessing_content_title{
  margin-top:100rpx;
  line-height:48rpx;
  color:#EE8181;
  font-size:30rpx;
  font-weight:500;
  font-family:SourceHanSansCN-Medium;
}
.blessing_content_text{
  margin-top: 30rpx;
  width: 100%;
  height: 230rpx;
  background: red;
}
.blessing_content_btn{
  margin: 50rpx auto;
  width:190rpx;
  height:46rpx;
  line-height: 46rpx;
  color: #fff;
  font-size:30rpx;
  text-align: center;
  border-radius:21rpx;
  background:rgba(243,116,13,1);
  border:1rpx solid rgba(187,157,130,1);
}