
.paixu_ear {
  text-align: right;
  height: 90rpx;
  line-height:90rpx; 
  font-size: 30rpx;
  margin: 30rpx 0;
  margin-top:80px;
  background:rgba(247,247,247,1);
}

.pai_ear {
  display: inline;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.pai {
  display: inline-block;
}

.san_pic {
  width: 20rpx;
  height: 15rpx;
  margin-left: 20rpx;
}
.checkbox {
  width: 0rpx;
  height: 45rpx;
  padding-right: 50rpx;
  display: inline-block;
  vertical-align: center;
  float: right;
  margin-top: 28rpx;
  margin-right: 50rpx;
  background: url("https://www.9pointstars.com/public/images/check.png");
  background-size: 100% 100%;
}
.xiala_ear {
  width: 100%;
  position: absolute;
  box-sizing: border-box;
  font-size: 30rpx;
  background: white;
}
.xiala_ear_item {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
  box-sizing: border-box;
}

.left_desc {
  display: inline-block;
  vertical-align: center;
  padding-left: 50rpx;
}

.right_desc {
  width: 0rpx;
  height: 40rpx;
  padding-right: 50rpx;
  display: inline-block;
  vertical-align: center;
  float: right;
  margin-top: 33rpx;
  margin-right: 50rpx;
}

.dui_pic {
  width: 100%;
  height: 100%;
}
.shop_ear {
  background: white;
  padding: 40rpx 40rpx;
  box-sizing: border-box;
}

.shoot_pic {
  width: 309rpx;
  height: 309rpx;
}

.didi {
  width: 309rpx;
  height: 510rpx;
  display: inline-block;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background: #f7f7f7;
}

.didi:nth-child(even) {
  float: right;
}

.desc {
  font-size: 32rpx;
  color: #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 11rpx 0rpx;
  padding: 0 15rpx;
  box-sizing: border-box
}
.price {
  font-size: 32rpx;
  color: #ccc;
  padding: 0 15rpx;
  box-sizing: border-box
}
.name{
  height: 37rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  padding: 0 15rpx;
  box-sizing: border-box
}
.baoqian{

width: 100%;
text-align: center;
margin-top: 150rpx

}

