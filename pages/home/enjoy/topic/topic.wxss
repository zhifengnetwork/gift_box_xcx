page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
/* 搜索框 */
.sousou_ear{
  width: 84%;
  margin-left: 8%;
  height: 56rpx;
  background: rgb(245,245,245);
  position: relative;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.sousou{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  margin-left: 40rpx;
  top: 13rpx;
  z-index: 2
}
.find{
  position: absolute;
  top: 0;
  left: 100rpx;
  width: 65%;
  height: 56rpx;
  font-size: 31rpx
}
.close_pic{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 13rpx;
  right: 20rpx;
  z-index: 2
}

/* tab切换 */
.swiper-tab{
    height: 170rpx;
    margin-top: 30rpx;
    padding-left: 20rpx;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    overflow-x: scroll;
    overflow-y: hidden;
    border-bottom: 2rpx solid #F4F4F4;
}
.swiper-tab-item{
  display: inline-block;
  width: 165rpx;
  height: 125rpx;
  margin: 0 10rpx;
  margin-top: 22.5rpx;
  border-radius:15rpx;
  position: relative;
  font-size:22rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:bold;
  text-decoration:underline;
  color:rgb(41, 24, 24);
  line-height:50rpx;
}
.swiper-tab :last-of-type{
  margin-right: 40rpx;
}
.touming{
  z-index: 999;
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0;
}
.tabimgbox{
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius:15rpx;
}
.tabimgbox image{
  width: 100%;
  height: 100%;
  display: block;
}
.tabtext{
  position: absolute;
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
  z-index: 2;
  line-height: 88rpx;
  font-size:22rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:bold;
  color:rgba(255,255,255,1);
  
}
.active{
    font-size: 35;
    font-weight: bold;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 10px;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.topicbox{
  height: 100rpx;
  border-bottom: 2rpx solid #F4F4F4;
  padding: 0 40rpx;
}

/* 二级话题 */
.topic_l{
  float: left;
  font-size:27rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:bold;
  color:rgba(68,68,68,1);
  line-height:100rpx;
}
.topic_r{
  float: left;
  margin-left: 30rpx;
  width:125rpx;
  height:35rpx;
  background:rgba(245,245,245,1);
  border-radius: 35rpx;
  margin-top: 35.5rpx;
}
.topic_rimgbox{
  margin-top: 7.5rpx;
  margin-left: 20rpx;
  width: 15rpx;
  height: 20rpx;
  float: left;
}
.topic_rimgbox image{
  width: 100%;
  height: 100%;
  display: block;
}
.topic_rview{
  margin-left: 6rpx;
  float: left;
  font-size: 18rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height: 35rpx;
}