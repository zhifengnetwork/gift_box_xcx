page{
  width: 100%;
  height: 100%;
  background: #000;
}
.swiper-tab{
    text-align: center;
    height: 80rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    font-size: 26rpx;
    margin-top: 150rpx;
    line-height: 80rpx;
    color: #999999;
    border-bottom: 1rpx solid #333335;
}
.swiper-tab-item{
    flex: 1;
   position: relative;
    /* background:linear-gradient(0deg,rgba(156,145,142,1) 0%,rgba(77,77,76,1) 100%); */
}
.active{
    /* border-bottom: 4rpx solid #fff;
    font-size: 35;
    font-weight: bold; */
    position: relative;
}
.active:before{
  content: '';
  position: absolute;
  width: 30%;
  left: 35%;
  bottom: 0;
  height: 4rpx;
  background-color: #fff;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 10px;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.box{
  height: 140rpx;
  border-bottom: 1rpx solid #333335;
  margin: 0 40rpx;
  z-index: 1;
}
.box_l{
  float: left;
  margin-top: 40rpx;
  width: 60rpx;
  height: 60rpx;
  background: #363434;
  border-radius: 50%;
}
.boximg{
  margin-left: 22.5rpx;
  margin-top: 20rpx;
  width: 15rpx;
  height: 20rpx;
  overflow: hidden;
}
.boximg image{
  width: 100%;
  height: 100%;
  display: block;
}
.box_r{
  float: left;
  margin-left: 30rpx;
  margin-top: 28rpx;
  width: 50%;
}
.box_rview{
  font-size: 26rpx;
  line-height: 50rpx;
  color: #fff;
}
.box_rtext{
  font-size: 24rpx;
  color: #999999;
}
.audiobox{
  width: 1rpx;
  left: 1rpx;
  overflow: hidden;
  float: left;
}
.audiobox audio{
  width: 100%;
  height: 100%;
}
.boxr{
  float: right;
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  background: #fff;
  color: #000;
  border-radius: 40rpx;
  font-size: 25rpx;
  line-height: 60rpx;
  z-index: 2;
}