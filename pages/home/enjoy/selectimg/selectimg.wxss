page{
  background: #000;
}

.imgbox{
  z-index: 2;
  height: 560rpx;
  width: 100%;
  background: #fff;
  overflow: hidden;
  position: relative;
  top: 200rpx;
  left: 0;
}
.popupimg{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}
.popupimg image{
  width: 100%;
  height: 100%;
  display: block;
}
.popuptext{
  font-size: 30rpx;
  height:auto;
  width: auto;
}
.select{
  height: 250rpx;
  margin-top: 200rpx;
}
.select_l{
  width: 50%;
  height: 250rpx;
  float: left;
  text-align: center;
}
.selectl_img{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  margin-top: 80rpx;
  margin-left: 50%;
  transform: translate(-50%);
}
.selectl_img image{
  width: 100%;
  height: 100%;
}
.select_l text{
  font-size:23rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:bold;
  color:rgba(255,255,255,1);
  line-height:50rpx;
  /* margin-left: 50%; */
}
.select_r{
  width: 50%;
  height: 250rpx;
  float: left;
  text-align: center;
}
.selectr_img{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  margin-top: 80rpx;
  margin-left: 50%;
  transform: translate(-50%);
}
.selectr_img image{
  width: 100%;
  height: 100%;
}
.select_r text{
  font-size:23rpx;
  font-family:SourceHanSansCN-Regular;
