  /* margin-left: 50%; */
}
.send{
  width: 500rpx;
  height: 80rpx;
  background: #fff;
  font-size:25rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:80rpx;
  text-align: center;
  border-radius:40rpx;
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translate(-50%);
}
/* 弹窗表情包 */
.guanbi{
  opacity: 0;
  position: absolute;
  top: 0;
  width: 100%;
  height: 40%;
}
.popup{
  height: 60%;
  width: 100%;
  /* background: skyblue; */
  position: absolute;
  bottom: 0rpx;
  left: 0;
  z-index: 3;
  overflow: hidden;
  overflow-y: auto;
}
.zhezhao{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60%;
  opacity: 0.5;
  background: #000;
}
.facebox{
  position: absolute;
  width: 100%;
  height: 90%;
  bottom: 0;
}
.faceimgbox{
  width: 20%;
  height: 150rpx;
  float:left;
  overflow: hidden;
}
.faceimgbox image{
  width: 100%;
  height: 100%;
  display: block;
}
