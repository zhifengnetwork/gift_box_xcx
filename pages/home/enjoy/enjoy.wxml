              <view class="biaoti">{{item.title}}</view>
              <view class="touxiang">
                <image class="user_pic" src="{{item.avatar}}"></image>
                <text class="nike">{{item.nickname}}</text>
                <view class="aixin_ear">
                  <!-- bindtap="dianji" -->
                  <!-- wx:if="{{dianzang[index]}}" -->
                  <image class="aixin" src="../../public/images/home/aixin.png" wx:if="{{item.count}}" catchtap="dianji" data-index="{{index}}" data-id="{{item.id}}"></image>
                  <image class="aixin" src="../../public/images/home/aixinan.png" wx:else  catchtap="dianji" data-index="{{index}}" data-id="{{item.id}}"></image>
                  <text style="margin-left:5rpx">{{item.point_num}}</text>
                </view>
                
              </view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
