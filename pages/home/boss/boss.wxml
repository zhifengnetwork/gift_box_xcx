<view class="boss_top"><component title='Boss星选' show_bol='{{false}}'></component></view>
<view class="bossbox">
  <view class="boss_img"></view>
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">
      经典系列
    </view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">
      为你星选
    </view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">
      节日专区
    </view>
    <view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">
      商务礼品
    </view>
  </view>
  <view class="{{currentTab == 0 ? 'show':'hidden'}}">
    <scroll-view>
      <view class="boss_c" wx:for="{{list}}" wx:key>
        <view class="boss_cbox">
          <view class="boss_cbox_box" wx:for="{{listdata}}" wx:key>
            <view class="boss_cbox_img"></view>
            <text class="boss_cbox_name">MONOGRAM ANTIPODE 長圍巾</text>
            <text class="boss_cbox_price">HK$4800</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
  <view class="{{currentTab == 1 ? 'show':'hidden'}}">
    <scroll-view>
      <view>为你星选</view>
    </scroll-view>
  </view>
  <view class="{{currentTab == 2 ? 'show':'hidden'}}">
    <scroll-view>
      <view>节日专区</view>
    </scroll-view>
  </view>
  <view class="{{currentTab == 3 ? 'show':'hidden'}}">
    <scroll-view>
      <view>商务礼品</view>
    </scroll-view>
  </view>
</view>