page{
  width: 100%;
  height: 100%;
  background:rgba(249,250,252,1);
}
.quanxuan_ear{
  padding:70px 50rpx 40rpx 50rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  background: white
}
.check{
  border: 1px solid #ccc;
  width: 0rpx;
  height: 30rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: top;
  padding-left: 30rpx;
  float: left;
}
.checkle{

  border: 1px solid #ccc;
  width: 0rpx;
  height: 30rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: top;
  padding-left: 30rpx;
  background: url('https://giftbox.zhifengwangluo.com/public/images/111.png') no-repeat;
  background-size: 100% 100%; 
  float: left;
}
.check_text{
  padding-left: 20rpx;
}
.tip{
  color: #666666;
  font-size: 30rpx;
  margin-left: 30rpx;
}
.dangxuan{
  margin-top: 40rpx;
